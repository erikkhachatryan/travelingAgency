<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="service" />

    <bean id="generalClassifierCache" class="service.model.GeneralClassifierCache" scope="session"/>

    <bean id="master1Form" class="service.beans.Master1Form" scope="session">
        <constructor-arg name="systemName" value="master1Form"/>
        <property name="generalClassifierCache" ref="generalClassifierCache" />
    </bean>

    <bean id="master2Form" class="service.beans.Master2Form" scope="session">
        <constructor-arg name="systemName" value="master2Form"/>
        <property name="master1Form" ref="master1Form" />
    </bean>
</beans>