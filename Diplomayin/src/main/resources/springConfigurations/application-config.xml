<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="com.synisys.erik.service" />

    <bean id="bean1" class="com.synisys.erik.service.beans.Bean1" scope="session">
        <constructor-arg name="systemName" value="bean1"/>
    </bean>

    <bean id="bean2" class="com.synisys.erik.service.beans.Bean2" scope="session">
        <constructor-arg name="systemName" value="bean2"/>
        <property name="bean1" ref="bean1" />
    </bean>
</beans>